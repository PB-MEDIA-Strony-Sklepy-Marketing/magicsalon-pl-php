# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.php text eol=lf
*.css text eol=lf
*.js text eol=lf
*.html text eol=lf
*.htm text eol=lf

# Templates
*.md text eol=lf
*.txt text eol=lf
*.xml text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Config files
.htaccess text eol=lf
.editorconfig text eol=lf
.gitattributes text eol=lf
.gitignore text eol=lf

# Documentation
*.markdown text eol=lf
LICENSE text eol=lf
AUTHORS text eol=lf
CHANGELOG text eol=lf
CONTRIBUTING text eol=lf
README text eol=lf

# Graphics
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text
*.eps binary
*.ai binary
*.psd binary

# Fonts
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.otf binary

# Audio/Video
*.mp3 binary
*.mp4 binary
*.mov binary
*.avi binary
*.webm binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.rar binary
*.7z binary

# PDFs
*.pdf binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
.vscode export-ignore
.editorconfig export-ignore
tests export-ignore
.php-cs-fixer.php export-ignore
phpunit.xml export-ignore
phpstan.neon export-ignore
composer.lock export-ignore
